<?xml version="1.0" encoding="utf-8"?>
<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.1">
  
  <CommandSet xml:lang="en-us" Name="commandSet_en-us">
    <CommandPrefix> Action Note, </CommandPrefix>
    <Example> Create a new note </Example>

    <Command Name="newNote">
      <Example> Create a new note  </Example>
      <ListenFor> Create [a] [new] note </ListenFor>
      <ListenFor> Add [a] [new] note </ListenFor>
      <Feedback> Creating new note... </Feedback>
      <Navigate/>
    </Command>

    <Command Name="newNoteWithTitle">
      <Example> Create a new note with title 'Shopping list'. </Example>
      <ListenFor> Create [a] [new] note with title {naturalLanguageTitle} </ListenFor>
      <ListenFor> Add [a] [new] note with title {naturalLanguageTitle} </ListenFor>
      <ListenFor> Title {naturalLanguageTitle} </ListenFor>
      <Feedback> Creating new note... </Feedback>
      <Navigate/>
    </Command>

    <Command Name="newNoteWithContent">                                             
      <Example> Create a new note with content 'Buy a gift for my sister'. </Example>
      <ListenFor> Create [a] [new] note with content {naturalLanguageContent} </ListenFor>
      <ListenFor> Add [a] [new] note with content {naturalLanguageContent} </ListenFor>
      <ListenFor> {naturalLanguageContent} </ListenFor>
      <Feedback> Creating new note... </Feedback>
      <Navigate/>
    </Command>

    <Command Name="newNoteWithTitleAndContent">
      <Example> Create a new note with title 'Shopping list' and content '2 bottles of milk'. </Example>
      <ListenFor> Create [a] [new] note with title {naturalLanguageTitle} and content {naturalLanguageContent} </ListenFor>
      <ListenFor> Add [a] [new] note with title {naturalLanguageTitle} and content {naturalLanguageContent} </ListenFor>
      <ListenFor> Title {naturalLanguageTitle}, content {naturalLanguageContent} </ListenFor>
      <Feedback> Creating new note... </Feedback>
      <Navigate/>
    </Command>

    <Command Name="newNoteWithContentAndColor">
      <Example> Create a new note with title 'Shopping list', category 'red'. </Example>
      <ListenFor> Create [a] [new] note with title {naturalLanguageTitle}, category {colors} </ListenFor>
      <ListenFor> Add [a] [new] note with title {naturalLanguageTitle}, category {colors} </ListenFor>
      <ListenFor> {naturalLanguageTitle}, category {colors} </ListenFor>
      <Feedback> Creating new note... </Feedback>
      <Navigate/>
    </Command>

    <PhraseList Label="colors">
      <Item> Neutral </Item>
      <Item> White </Item>
      <Item> Red </Item>
      <Item> Green </Item>
      <Item> Blue </Item>
      <Item> Violett </Item>
      <Item> Orange </Item>
      <Item> Yellow </Item>
    </PhraseList>

    <PhraseTopic Label="naturalLanguageContent" Scenario="Natural Language" />

    <PhraseTopic Label="naturalLanguageTitle" Scenario="Natural Language" />

  </CommandSet>

  <CommandSet xml:lang="de-de" Name="commandSet_de-de">
    <CommandPrefix> Action Note, </CommandPrefix>
    <Example> Erstelle neue Notiz </Example>

    <Command Name="newNote">
      <Example> Erstelle neue Notiz.  </Example>
      <ListenFor> [Erstelle] [neue] Notiz </ListenFor>
      <ListenFor> Notiz anlegen </ListenFor>
      <Feedback> Erstelle neue Notiz... </Feedback>
      <Navigate/>
    </Command>

    <Command Name="newNoteWithTitle">
      <Example> Erstelle neue Notiz mit Titel 'Einkaufsliste'. </Example>
      <ListenFor> Erstelle [neue] Notiz mit Titel {naturalLanguageTitle} </ListenFor>
      <ListenFor> Notiz mit Titel {naturalLanguageTitle} </ListenFor>
      <ListenFor> Titel {naturalLanguageTitle} </ListenFor>
      <Feedback> Erstelle neue Notiz... </Feedback>
      <Navigate/>
    </Command>

    <Command Name="newNoteWithContent">
      <Example> Erstelle neue Notiz mit Inhalt 'Milch im Supermarkt einkaufen'. </Example>
      <ListenFor> Erstelle [neue] Notiz mit Inhalt {naturalLanguageContent} </ListenFor>
      <ListenFor> Notiz mit Inhalt {naturalLanguageContent} </ListenFor>
      <ListenFor> {naturalLanguageContent} </ListenFor>
      <Feedback> Erstelle neue Notiz... </Feedback>
      <Navigate/>
    </Command>

    <Command Name="newNoteWithTitleAndContent">
      <Example> Erstelle neue Notiz mit Titel 'Einkaufsliste' und Inhalt 'Milch im Supermarkt einkaufen'. </Example>
      <ListenFor> Erstelle [neue] Notiz mit Titel {naturalLanguageTitle} [und] Inhalt {naturalLanguageContent} </ListenFor>
      <ListenFor> Notiz mit Titel {naturalLanguageTitle} und Inhalt {naturalLanguageContent} </ListenFor>
      <ListenFor> Titel {naturalLanguageTitle}, Inhalt {naturalLanguageContent} </ListenFor>
      <Feedback> Erstelle neue Notiz... </Feedback>
      <Navigate/>
    </Command>

    <Command Name="newNoteWithContentAndColor">
      <Example> Erstelle neue Notiz mit Inhalt 'Milch im Supermarkt einkaufen', Kategorie 'Rot'. </Example>
      <ListenFor> Erstelle [neue] Notiz mit Inhalt {naturalLanguageContent}, Kategorie {colors} </ListenFor>
      <ListenFor> Notiz mit Inhalt {naturalLanguageContent}, Kategorie {colors} </ListenFor>
      <ListenFor> {naturalLanguageContent}, Kategorie {colors} </ListenFor>
      <Feedback> Erstelle neue Notiz... </Feedback>
      <Navigate/>
    </Command>

    <PhraseList Label="colors">
      <Item> Neutral </Item>
      <Item> Weiß </Item>
      <Item> Rot </Item>
      <Item> Grün </Item>
      <Item> Blau </Item>
      <Item> Violett </Item>
      <Item> Orange </Item>
      <Item> Gelb </Item>
    </PhraseList>

    <PhraseTopic Label="naturalLanguageContent" Scenario="Natural Language" />

    <PhraseTopic Label="naturalLanguageTitle" Scenario="Natural Language" />

  </CommandSet>

  <!-- Other CommandSets for other languages -->

</VoiceCommands>